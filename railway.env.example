# Railway Environment Variables Example
# Copy this file and set these variables in your Railway dashboard

# Database (Railway will auto-generate DATABASE_URL)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/chicken_management

# Django Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=your-app.railway.app,localhost,127.0.0.1

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here
ADMIN_EMAIL=admin@yourdomain.com

# Email Configuration (REQUIRED for daily emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-character-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Frontend URL (for CORS)
REACT_APP_API_URL=https://your-app.railway.app/api

# Optional: Email debugging
EMAIL_DEBUG=False

# Optional: Logging level
LOG_LEVEL=INFO
