# Chicken House Management System - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:password@db:5432/chicken_management
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@example.com

# =============================================================================
# ROTEM SCRAPER CONFIGURATION
# =============================================================================
ROTEM_USERNAME=your-rotem-username
ROTEM_PASSWORD=your-rotem-password

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Choose one of the email configurations below based on your provider

# Gmail Configuration (Recommended)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=noreply@chickenmanagement.com

